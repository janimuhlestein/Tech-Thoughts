<ol class="post-list">
    <li>
        <article class="post">
            <div class="title">
                <a href="{{post_url}}" target="_blank">{{title}}</a>
                <span>({{post_url}})</span>
            </div>
            <div>
                <textarea>{{post_text}}</textarea>
            </div>
            <div class="meta">
                {{vote_count}} points by {{user.username}} on
                {{created_at}}
                |
                <a href="/post/{{id}}">{{comments.length}} comments</a>
            </div>
        </article>
    </li>
</ol>